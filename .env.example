# MealBot Configuration
# Copy this file to .env and fill in your values

# Telegram Bot Token (from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Anthropic API Key (for Claude meal planning)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Coop.ch Credentials
COOP_USERNAME=your_coop_email@example.com
COOP_PASSWORD=your_coop_password_here

# Database path (optional, defaults to ./mealbot.db)
DATABASE_PATH=./mealbot.db

# Timezone (optional, defaults to Europe/Zurich)
TIMEZONE=Europe/Zurich
